<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              tools:background="@color/colorPrimary"
              android:weightSum="3">

    <ImageView
            android:layout_weight="1.5"
            android:id="@+id/item_intro_iv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:scaleType="centerInside"
            tools:src="@drawable/owl" />

    <LinearLayout
            android:layout_weight="1.3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

        <TextView
                android:id="@+id/item_intro_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="SEARCH DESTINATION"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/item_intro_tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="32dp"
                android:text="Lorem ipsum dolor sit amet, lorem ipsum dolor sit amet"
                android:textColor="@android:color/white"
                android:justificationMode="inter_word"
                android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>